FROM python:3.9-slim-buster

ARG TARGETPLATFORM

ENV USER="ou"
ENV UID="1000"
ENV GID="100"
ENV MODULE_CODE="Test"
ENV MODULE_PRESENTATION="1"
ENV HOME="/home/$USER/$MODULE_CODE-$MODULE_PRESENTATION"

USER root

RUN mkdir /home/$USER && \
    useradd -u $UID -g $GID -d $HOME -m $USER

RUN DEBIAN_FRONTEND=noninteractive apt-get update -y && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y tini

RUN if [ "$TARGETPLATFORM" = "linux/arm/v7" ]; then pip install --no-cache-dir --extra-index-url=https://www.piwheels.org/simple "jupyterhub==1.3.0" "notebook>=6.0.0,<7" "ou-container-content>=1.0.3" ; else pip install --no-cache-dir "jupyterhub==1.3.0" "notebook>=6.0.0,<7" "ou-container-content>=1.0.3" ; fi

RUN mkdir -p /etc/module-content/data
COPY ou-builder-build/content_config.yaml /etc/module-content/config.yaml

COPY ou-builder-build/start-notebook.sh /usr/bin/start.sh

COPY ou-builder-build/jupyter_notebook_config.py /etc/jupyter/jupyter_notebook_config.py

COPY ou-builder-build/startup-script-09ac982633875aa012653ac7edefe40ee2afb3200957ed7f6f6aa8644c08bdb5 /usr/bin/startup-script-09ac982633875aa012653ac7edefe40ee2afb3200957ed7f6f6aa8644c08bdb5

RUN chmod a+x /usr/bin/start.sh

RUN chmod a+x /usr/bin/startup-script-09ac982633875aa012653ac7edefe40ee2afb3200957ed7f6f6aa8644c08bdb5

RUN ou-container-content prepare

RUN chown -R $USER:$GID $HOME /etc/module-content

USER $USER

WORKDIR $HOME
ENTRYPOINT ["tini", "-g", "--"]

EXPOSE 8888

CMD ["start.sh"]
